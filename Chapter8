#include <iostream>
#include <bits/stdc++.h>

using namespace std;

#define ll long long int
#define ld long double

int main(){

    ll t;
    cin >> t;

    while(t--){
        ll n,i;
        cin >> n;

        if(n%2==0){
            for(i=0;i<n/2;i++){
                cout << 1;
            }
            cout << endl;
        }
        else{
            if(n==3){
                cout << 7;
                cout << endl;
            }
            else{
                cout << 7;
                n=n-3;
                for(i=0;i<n/2;i++){
                    cout << 1;
                }
                cout << endl;
            }
        }
    }
}
